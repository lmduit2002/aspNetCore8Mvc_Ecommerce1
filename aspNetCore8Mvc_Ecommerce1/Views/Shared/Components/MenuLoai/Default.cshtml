@model List<aspNetCore8Mvc_Ecommerce1.ViewModels.LoaiVM>
<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" 
                            asp-route-MaLoai="@item.MaLoai"
                           asp-route-TuKhoa="@Context.Request.Query["TuKhoa"]"
                           asp-route-DonGia="@Context.Request.Query["DonGia"]"
                           asp-route-SortBy="@Context.Request.Query["SortBy"]">
                           <i class="fas @item.Icon me-2"></i>@item.TenLoai</a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>